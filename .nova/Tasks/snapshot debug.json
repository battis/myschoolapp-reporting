{
  "actions" : {
    "build" : {
      "postActions" : [
        {
          "action" : "build",
          "taskName" : "build",
          "type" : "runTask"
        }
      ]
    },
    "run" : {
      "preActions" : [
        {
          "script" : "export USERNAME=\"$(op item get $OP_ITEM --fields username)\"\nexport PASSWORD=\"$(op item get $OP_ITEM --fields password --reveal)\"\n",
          "type" : "runScript"
        }
      ]
    }
  },
  "buildBeforeRunning" : true,
  "extension" : {
    "identifier" : "panic.JavaScript",
    "name" : "JavaScript"
  },
  "extensionTemplate" : "nodeDebug",
  "extensionValues" : {
    "launchArgs" : [
      "snapshot",
      "-u",
      "$USERNAME",
      "-p",
      "$PASSWORD",
      "--sso",
      "entra-id",
      "--outPath",
      "$OUT",
      "$URL"
    ],
    "request" : "launch",
    "runtimeArgs" : [
      "--env-file",
      ".env"
    ],
    "scriptPath" : "dist\/bin\/msar.js",
    "stopOnEntry" : false
  },
  "openLogOnRun" : "start"
}
